# 환경 변수 예제 파일
# 이 파일을 .env로 복사하여 사용하세요

# 개발 환경 설정
NODE_ENV=development
PORT=3000

# API 설정 (선택사항)
# API_KEY=your-api-key-here
# API_ENDPOINT=https://api.example.com

# 디버그 모드
DEBUG=false

# Cloudflare 설정 (배포시 사용)
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_API_TOKEN=your-api-token

# 사용 통계 (선택사항)
ANALYTICS_ENABLED=false

# 테스트 계정 설정 (개발환경용)
# 실제 사용 시 보안된 이메일과 비밀번호로 변경하세요
TEST_ADMIN_EMAIL=admin@yourdomain.com
TEST_ADMIN_PASSWORD=your-secure-admin-password

TEST_PREMIUM_EMAIL=premium@yourdomain.com  
TEST_PREMIUM_PASSWORD=your-secure-premium-password

TEST_USER_EMAIL=user@yourdomain.com
TEST_USER_PASSWORD=your-secure-user-password

# JWT 비밀키 (필수: 프로덕션에서는 강력한 비밀키 사용)
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters

# 데이터베이스 암호화 키 (필수)
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data